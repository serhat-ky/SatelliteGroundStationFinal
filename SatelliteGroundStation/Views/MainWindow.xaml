<Window x:Class="SatelliteGroundStation.Views.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF" 
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation" 
        Title="HIDROSPHERE - Satellite Ground Station Control Panel" 
        Height="900" 
        Width="1600" 
        Background="#FF2D2D30" 
        WindowState="Maximized">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatusStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>

        <!-- İnceltilmiş buton stili -->
        <Style x:Key="CommandButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Height" Value="26"/>
        </Style>

        <!-- Dikdörtgen ComboBox -->
        <Style x:Key="RectangularComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="MainBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter x:Name="ContentSite"
                                                      Grid.Column="0"
                                                      IsHitTestVisible="False"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>

                                    <TextBox x:Name="PART_EditableTextBox"
                                             Grid.Column="0"
                                             Style="{x:Null}"
                                             Template="{DynamicResource ComboBoxTextBox}"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Center"
                                             Margin="{TemplateBinding Padding}"
                                             Focusable="True"
                                             Background="Transparent"
                                             Visibility="Hidden"
                                             IsReadOnly="{TemplateBinding IsReadOnly}"/>

                                    <Border x:Name="DropDownBorder"
                                            Grid.Column="1"
                                            Background="#FF404040"
                                            BorderBrush="Gray"
                                            BorderThickness="1,0,0,0">
                                        <Path x:Name="Arrow"
                                              Fill="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder2"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="Gray"
                                            CornerRadius="0"/>
                                    <ScrollViewer Margin="1"
                                                  SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder2" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="Gray"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder2" Property="CornerRadius" Value="0"/>
                                <Setter TargetName="DropDownBorder2" Property="Margin" Value="0,2,0,0"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="DarkGray"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="DarkSlateGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox TextBox Template -->
        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}"/>
        </ControlTemplate>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- ARAS durum stili -->
        <Style x:Key="StatusIndicator" TargetType="Rectangle">
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="True">
                    <Setter Property="Fill" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="False">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Main content -->
            <RowDefinition Height="*"/>
            <!-- Charts -->
            <RowDefinition Height="300"/>
            <!-- Data grid -->
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#FF1E1E1E" BorderBrush="Gray" BorderThickness="0,0,0,1" MinHeight="80">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                    <Image Source="/Images/flagofturkey.png" Width="60" Height="60" Margin="5,0"/>
                    <Image Source="/Images/hidlogo.png" Width="60" Height="60" Margin="10,0"/>
                </StackPanel>

                <!-- CONTROL PANEL (sabit yerleşim) -->
                <Grid Grid.Column="1" Margin="0,4,0,0">
                    <!-- 2 satır: 0=üst (filtre + 3 buton + portlar), 1=alt (Uydu/Bağlantı + simülasyon) -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- 5 sütun: filtre | spacer | 3 buton | spacer | sağ blok -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- SOL: Multispektral Filtre (üst satır) -->
                    <GroupBox Grid.Row="0" Grid.Column="0"
                              Header="Multispektral Filtre" Foreground="White" Margin="8,0,6,0"
                              MinWidth="360" MinHeight="50" Background="#FF404040" BorderBrush="LightGray" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <!-- Renk Kutucukları -->
                            <StackPanel Orientation="Horizontal" Margin="5,0">
                                <StackPanel Margin="3,2">
                                    <TextBlock Text="Renk 1" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                    <Border Width="40" Height="30" BorderThickness="2" BorderBrush="White" CornerRadius="3" Background="{Binding FirstSpectralColor}">
                                        <TextBlock Text="{Binding FirstColorValue}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="+" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="8,12,8,0"/>
                                <StackPanel Margin="3,2">
                                    <TextBlock Text="Renk 2" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                    <Border Width="40" Height="30" BorderThickness="2" BorderBrush="White" CornerRadius="3" Background="{Binding SecondSpectralColor}">
                                        <TextBlock Text="{Binding SecondColorValue}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="=" Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="8,12,8,0"/>
                                <StackPanel Margin="3,2">
                                    <TextBlock Text="Karışım" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                    <Border Width="40" Height="30" BorderThickness="2" BorderBrush="White" CornerRadius="3" Background="{Binding MixedSpectralColor}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Seçiciler + Kod + Gönder -->
                            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                <!-- Renk1 seçici -->
                                <StackPanel Margin="5,2">
                                    <TextBlock Text="Renk 1 (0-3)" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                    <ComboBox Width="50" Height="25" SelectedValue="{Binding Renk1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource RectangularComboBoxStyle}">
                                        <ComboBoxItem Content="0"/>
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Renk2 seçici -->
                                <StackPanel Margin="5,2">
                                    <TextBlock Text="Renk 2 (0-3)" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                    <ComboBox Width="50" Height="25" SelectedValue="{Binding Renk2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              Style="{StaticResource RectangularComboBoxStyle}">
                                        <ComboBoxItem Content="0"/>
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2"/>
                                        <ComboBoxItem Content="3"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Kod kutusu -->
                                <StackPanel Margin="5,2">
                                    <TextBlock Text="Kod" Foreground="White" FontSize="9" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,3"/>
                                    <TextBox x:Name="SpectralInput"
                                             Width="45" Height="25"
                                             Text="{Binding SpectralInputCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             MaxLength="2" FontFamily="Consolas" FontSize="12" FontWeight="Bold"
                                             HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                             Background="White" Foreground="Black" BorderBrush="DarkGray" BorderThickness="1"
                                             ToolTip="0=Şeffaf, 1=Kırmızı, 2=Yeşil, 3=Mavi"/>
                                </StackPanel>

                                <!-- Gönder -->
                                <Button Content="Gönder"
                                        Command="{Binding SendSpectralCodeCommand}"
                                        Width="60" Height="25" Margin="6,17,0,0" Padding="3,1"
                                        ToolTip="Seçili iki haneli kodu Arduino'ya gönderir"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- ORTA: 3 BUTON (üst satır) -->
                    <StackPanel Grid.Row="0" Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Margin="0,18,0,0">
                        <Button Content="Manuel Bırakma" Style="{StaticResource CommandButtonStyle}"
                                Command="{Binding ManualReleaseCommand}" Margin="0,0,6,0"/>
                        <Button Content="Excel Formatında Dışa Aktar" Style="{StaticResource CommandButtonStyle}"
                                Command="{Binding ExportDataCommand}" Margin="0,0,6,0"/>
                        <Button Content="Telemetri Formatı Başlat" Style="{StaticResource CommandButtonStyle}"
                                Command="{Binding StartTelemetryCommand}"/>
                    </StackPanel>

                    <!-- SAĞ ÜST: Port/Baud + Bağlan/Kes (üst satır) -->
                    <StackPanel Grid.Row="0" Grid.Column="4"
                                Orientation="Horizontal"
                                VerticalAlignment="Top"
                                Margin="0,18,0,0">
                        <ComboBox ItemsSource="{Binding AvailableComPorts}" SelectedItem="{Binding SelectedComPort}"
                                  Width="110" Margin="0,0,6,0" Style="{StaticResource RectangularComboBoxStyle}"/>
                        <ComboBox ItemsSource="{Binding AvailableBaudRates}" SelectedItem="{Binding SelectedBaudRate}"
                                  Width="110" Margin="0,0,6,0" Style="{StaticResource RectangularComboBoxStyle}"/>
                        <Button Content="Bağlan" Command="{Binding ConnectCommand}" Style="{StaticResource CommandButtonStyle}" Margin="0,0,6,0"/>
                        <Button Content="Kes" Command="{Binding DisconnectCommand}" Style="{StaticResource CommandButtonStyle}"/>
                    </StackPanel>

                    <!-- ALT SATIR: Uydu/Bağlantı (ortada) -->
                    <StackPanel Grid.Row="1" Grid.ColumnSpan="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,6,0,0">
                        <TextBlock Text="{Binding SatelliteStatus, StringFormat='Uydu: {0}'}"
                                   Style="{StaticResource StatusStyle}" FontSize="10"/>
                        <TextBlock Text="{Binding ConnectionStatus, StringFormat='Bağlantı: {0}'}"
                                   Style="{StaticResource StatusStyle}" FontSize="10" Margin="15,0,0,0"/>
                    </StackPanel>

                    <!-- ALT SAĞ: Simülasyon butonları -->
                    <StackPanel Grid.Row="1" Grid.Column="4"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                        <Button Content="Simülasyonu Başlat" Command="{Binding StartSimulationCommand}"
                                Style="{StaticResource CommandButtonStyle}" Margin="0,0,6,0"/>
                        <Button Content="Simülasyonu Durdur" Command="{Binding StopSimulationCommand}"
                                Style="{StaticResource CommandButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- ARAS Panel + TÜRKSAT -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10">
                    <GroupBox Header="ARAS" Foreground="White" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem1Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem2Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem3Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem4Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem5Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem6Status}"/>
                        </StackPanel>
                    </GroupBox>
                    <Border Background="#FF0066CC" Width="100" Height="30">
                        <TextBlock Text="TÜRKSAT MUY" Foreground="White" FontSize="8" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Yükseklik" Foreground="White" Margin="2">
                    <Grid>
                        <ProgressBar Orientation="Vertical" Value="{Binding CurrentAltitude}" Maximum="2000" Background="DarkGray" Foreground="LightBlue"/>
                        <TextBlock Text="{Binding CurrentAltitude, StringFormat='{}{0:F0} m'}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="Uydu Simülasyonu" Foreground="White" Margin="2">
                    <Border Background="Black">
                        <Canvas>
                            <Rectangle Fill="Silver" Width="30" Height="60" Canvas.Left="85" Canvas.Top="70"/>
                            <Rectangle Fill="Gold" Width="8" Height="8" Canvas.Left="96" Canvas.Top="50"/>
                            <Rectangle Fill="DarkBlue" Width="60" Height="8" Canvas.Left="70" Canvas.Top="95"/>
                        </Canvas>
                    </Border>
                </GroupBox>
            </Grid>

            <!-- Center Column - Video Feed -->
            <GroupBox Grid.Column="1" Header="Canlı Video Yayını" Foreground="White" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF404040" Height="30">
                        <ComboBox ItemsSource="{Binding AvailableVideoDevices}" 
                                  SelectedItem="{Binding SelectedVideoDevice}" 
                                  Width="150" 
                                  Margin="5" 
                                  DisplayMemberPath="Name"
                                  Style="{StaticResource RectangularComboBoxStyle}"/>
                        <Button Content="Başlat" Command="{Binding StartVideoCaptureCommand}" Style="{StaticResource CommandButtonStyle}" Width="50"/>
                        <Button Content="Durdur" Command="{Binding StopVideoCaptureCommand}" Style="{StaticResource CommandButtonStyle}" Width="50"/>
                    </StackPanel>

                    <Border Grid.Row="1" Background="Black">
                        <Grid>
                            <Image x:Name="VideoImage" Source="{Binding CurrentVideoFrame}" Stretch="Uniform"/>
                            <TextBlock Text="Video Feed&#x0a;(Kamera seçin ve başlatın)" Foreground="Gray" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsVideoCapturing}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Right Column -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Canlı GPS Verileri" Foreground="White" Margin="2">
                    <Border Background="LightGray">
                        <Grid>
                            <Rectangle Fill="LightGray"/>
                            <Image Source="https://via.placeholder.com/300x200/cccccc/666666?text=GPS+MAP" Stretch="Uniform" Margin="5"/>
                            <TextBlock Text="GPS Harita&#x0a;(Harita servisi bağlanacak)" Foreground="DarkGray" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </GroupBox>

                <GroupBox Grid.Row="1" Header="Batarya Durumu" Foreground="White" Margin="2">
                    <Grid>
                        <ProgressBar Orientation="Vertical" Value="{Binding BatteryPercentage}" Maximum="100" Background="DarkGray" Foreground="Green"/>
                        <TextBlock Text="{Binding BatteryPercentage, StringFormat='{}{0:F1}%'}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Charts Section -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Sıcaklık Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding TemperatureSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding TemperatureYAxes}"
                                    Background="Black"
                                    AnimationsSpeed="00:00:00.100"/>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Basınç Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding PressureSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding PressureYAxes}"
                                    Background="Black"
                                    AnimationsSpeed="00:00:00.100"/>
            </GroupBox>

            <GroupBox Grid.Column="2" Header="Hız Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding SpeedSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding SpeedYAxes}"
                                    Background="Black"
                                    AnimationsSpeed="00:00:00.100"/>
            </GroupBox>

            <GroupBox Grid.Column="3" Header="Pil Gerilimi Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding BatteryVoltageSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding BatteryYAxes}"
                                    Background="Black"
                                    AnimationsSpeed="00:00:00.100"/>
            </GroupBox>

            <GroupBox Grid.Column="4" Header="Eksen Verileri Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding AxisDataSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding AxisYAxes}"
                                    Background="Black"
                                    AnimationsSpeed="00:00:00.100"/>
            </GroupBox>
        </Grid>

        <!-- Telemetry Data Grid -->
        <GroupBox Grid.Row="3" Header="Telemetri Veri Tablosu" Foreground="White" Margin="5">
            <DataGrid x:Name="TelemetryDataGrid" 
                      ItemsSource="{Binding TelemetryDataCollection}" 
                      AutoGenerateColumns="False" 
                      Background="White" 
                      Foreground="Black" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column" 
                      CanUserAddRows="False" 
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Paket #" Binding="{Binding PacketNumber}" Width="60"/>
                    <DataGridTextColumn Header="Zaman" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="80"/>
                    <DataGridTextColumn Header="Sıcaklık (°C)" Binding="{Binding Temperature, StringFormat='F2'}" Width="100"/>
                    <DataGridTextColumn Header="Basınç (Pa)" Binding="{Binding Pressure, StringFormat='F0'}" Width="100"/>
                    <DataGridTextColumn Header="Yükseklik (m)" Binding="{Binding Altitude, StringFormat='F1'}" Width="100"/>
                    <DataGridTextColumn Header="Hız (m/s)" Binding="{Binding Speed, StringFormat='F1'}" Width="80"/>
                    <DataGridTextColumn Header="Pil (V)" Binding="{Binding BatteryVoltage, StringFormat='F2'}" Width="70"/>
                    <DataGridTextColumn Header="GPS Lat" Binding="{Binding GpsLatitude, StringFormat='F6'}" Width="100"/>
                    <DataGridTextColumn Header="GPS Lon" Binding="{Binding GpsLongitude, StringFormat='F6'}" Width="100"/>
                    <DataGridTextColumn Header="Gyro X" Binding="{Binding GyroX, StringFormat='F1'}" Width="70"/>
                    <DataGridTextColumn Header="Gyro Y" Binding="{Binding GyroY, StringFormat='F1'}" Width="70"/>
                    <DataGridTextColumn Header="Gyro Z" Binding="{Binding GyroZ, StringFormat='F1'}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>
