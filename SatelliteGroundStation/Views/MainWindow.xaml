<Window x:Class="SatelliteGroundStation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="HIDROSPHERE - Satellite Ground Station Control Panel" 
        Height="900" Width="1600"
        Background="#FF2D2D30"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatusStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>

        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>

        <Style x:Key="CommandButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF404040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <!-- Value converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- Status indicator converter -->
        <Style x:Key="StatusIndicator" TargetType="Rectangle">
            <Setter Property="Width" Value="15"/>
            <Setter Property="Height" Value="15"/>
            <Setter Property="Margin" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="True">
                    <Setter Property="Fill" Value="Green"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="False">
                    <Setter Property="Fill" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="300"/>
            <!-- Charts -->
            <RowDefinition Height="150"/>
            <!-- Data grid -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#FF1E1E1E" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10">

                    <!-- Turkish Flag Image -->
                    <Image Source="/Images/flagofturkey.png" Width="60" Height="60" Margin="5,0"/>

                    <!-- HIDROSPHERE Logo Image -->
                    <Image Source="/Images/hidlogo.png" Width="60" Height="60" Margin="10,0"/>

                </StackPanel>

                <!-- Control Panel -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Top Row - Filters and Commands -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Multi-Spectral Filter Panel -->
                        <GroupBox Header="Multi-Spektral Filtre" Foreground="White" Margin="10,0">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource FilterButtonStyle}" Background="Purple" 
                                       Command="{Binding PurpleFilterCommand}"/>
                                <Button Style="{StaticResource FilterButtonStyle}" Background="Blue" 
                                       Command="{Binding BlueFilterCommand}"/>
                                <Button Style="{StaticResource FilterButtonStyle}" Background="Green" 
                                       Command="{Binding GreenFilterCommand}"/>

                                <!-- Command Code Input -->
                                <TextBox x:Name="CommandCodeTextBox" Width="60" Height="25" Margin="10,0,5,0" 
                                        Text="{Binding CommandCode, UpdateSourceTrigger=PropertyChanged}"
                                        MaxLength="4" FontFamily="Consolas"/>
                                <Button Content="Send" Style="{StaticResource CommandButtonStyle}" 
                                       Command="{Binding SendCommandCodeCommand}"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Command Buttons -->
                        <Button Content="Manuel Bırakma" Style="{StaticResource CommandButtonStyle}" 
                               Command="{Binding ManualReleaseCommand}"/>
                        <Button Content="Excel Formatında Dışa Aktar" Style="{StaticResource CommandButtonStyle}" 
                               Command="{Binding ExportDataCommand}"/>
                        <Button Content="Telemetri Formatı Başlat" Style="{StaticResource CommandButtonStyle}" 
                               Command="{Binding StartTelemetryCommand}"/>
                    </StackPanel>

                    <!-- Bottom Row - Status and Connection -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Status Indicators -->
                        <TextBlock Text="{Binding SatelliteStatus, StringFormat='Uydu Durumu: {0}'}" 
                                  Style="{StaticResource StatusStyle}" Margin="20,0"/>
                        <TextBlock Text="{Binding ConnectionStatus, StringFormat='Bağlantı Durumu: {0}'}" 
                                  Style="{StaticResource StatusStyle}" Margin="20,0"/>

                        <!-- Connection Controls -->
                        <ComboBox ItemsSource="{Binding AvailableComPorts}" 
                                 SelectedItem="{Binding SelectedComPort}" 
                                 Width="80" Margin="10,0,5,0"/>
                        <ComboBox ItemsSource="{Binding AvailableBaudRates}" 
                                 SelectedItem="{Binding SelectedBaudRate}" 
                                 Width="80" Margin="5,0"/>
                        <Button Content="Bağlan" Command="{Binding ConnectCommand}" 
                               Style="{StaticResource CommandButtonStyle}"/>
                        <Button Content="Kes" Command="{Binding DisconnectCommand}" 
                               Style="{StaticResource CommandButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- ARAS Panel and TÜRKSAT Logo -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10">
                    <!-- ARAS System -->
                    <GroupBox Header="ARAS" Foreground="White" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem1Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem2Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem3Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem4Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem5Status}"/>
                            <Rectangle Style="{StaticResource StatusIndicator}" DataContext="{Binding Subsystem6Status}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- TÜRKSAT Logo -->
                    <Border Background="#FF0066CC" Width="100" Height="30">
                        <TextBlock Text="TÜRKSAT MUY" Foreground="White" FontSize="8" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- Left: Altitude + Satellite -->
                <ColumnDefinition Width="*"/>
                <!-- Center: Video Feed -->
                <ColumnDefinition Width="300"/>
                <!-- Right: GPS + Battery -->
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Altitude Indicator -->
                <GroupBox Grid.Row="0" Header="Yükseklik" Foreground="White" Margin="2">
                    <Grid>
                        <ProgressBar Orientation="Vertical" Value="{Binding CurrentAltitude}" 
                                    Maximum="2000" Background="DarkGray" Foreground="LightBlue"/>
                        <TextBlock Text="{Binding CurrentAltitude, StringFormat='{}{0:F0} m'}" 
                                  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                                  Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>

                <!-- 2D Satellite Simulation -->
                <GroupBox Grid.Row="1" Header="Uydu Simülasyonu" Foreground="White" Margin="2">
                    <Border Background="Black">
                        <!-- Simple satellite representation -->
                        <Canvas>
                            <Rectangle Fill="Silver" Width="30" Height="60" Canvas.Left="85" Canvas.Top="70"/>
                            <Rectangle Fill="Gold" Width="8" Height="8" Canvas.Left="96" Canvas.Top="50"/>
                            <Rectangle Fill="DarkBlue" Width="60" Height="8" Canvas.Left="70" Canvas.Top="95"/>
                        </Canvas>
                    </Border>
                </GroupBox>
            </Grid>

            <!-- Center Column - Video Feed -->
            <GroupBox Grid.Column="1" Header="Canlı Video Yayını" Foreground="White" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <!-- Video Controls -->
                        <RowDefinition Height="*"/>
                        <!-- Video Display -->
                    </Grid.RowDefinitions>

                    <!-- Video Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                   Background="#FF404040" Height="30">
                        <ComboBox ItemsSource="{Binding AvailableVideoDevices}" 
                     SelectedItem="{Binding SelectedVideoDevice}" 
                     Width="150" Margin="5" 
                     DisplayMemberPath="Name"/>
                        <Button Content="Başlat" Command="{Binding StartVideoCaptureCommand}" 
                   Style="{StaticResource CommandButtonStyle}" Width="50"/>
                        <Button Content="Durdur" Command="{Binding StopVideoCaptureCommand}" 
                   Style="{StaticResource CommandButtonStyle}" Width="50"/>
                    </StackPanel>

                    <!-- Video Display -->
                    <Border Grid.Row="1" Background="Black">
                        <Grid>
                            <Image x:Name="VideoImage" 
                      Source="{Binding CurrentVideoFrame}" 
                      Stretch="Uniform"/>
                            <TextBlock Text="Video Feed&#x0a;(Kamera seçin ve başlatın)" 
                          Foreground="Gray" FontSize="16" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"
                          TextAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsVideoCapturing}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Right Column -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <!-- GPS Map -->
                <GroupBox Grid.Row="0" Header="Canlı GPS Verileri" Foreground="White" Margin="2">
                    <Border Background="LightGray">
                        <!-- GMap yerine basit bir placeholder kullanalım -->
                        <Grid>
                            <Rectangle Fill="LightGray"/>
                            <Image Source="https://via.placeholder.com/300x200/cccccc/666666?text=GPS+MAP" 
                   Stretch="Uniform" Margin="5"/>
                            <TextBlock Text="GPS Harita&#x0a;(Harita servisi bağlanacak)" 
                      Foreground="DarkGray" FontSize="12" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      TextAlignment="Center"/>
                        </Grid>
                    </Border>
                </GroupBox>

                <!-- Battery Status -->
                <GroupBox Grid.Row="1" Header="Batarya Durumu" Foreground="White" Margin="2">
                    <Grid>
                        <ProgressBar Orientation="Vertical" Value="{Binding BatteryPercentage}" 
                                    Maximum="100" Background="DarkGray" Foreground="Green"/>
                        <TextBlock Text="{Binding BatteryPercentage, StringFormat='{}{0:F1}%'}" 
                                  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                                  Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Charts Section -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Temperature Chart -->
            <GroupBox Grid.Column="0" Header="Sıcaklık Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding TemperatureSeries}" Background="Black"/>
            </GroupBox>

            <!-- Pressure Chart -->
            <GroupBox Grid.Column="1" Header="Basınç Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding PressureSeries}" Background="Black"/>
            </GroupBox>

            <!-- Speed Chart -->
            <GroupBox Grid.Column="2" Header="Hız Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding SpeedSeries}" Background="Black"/>
            </GroupBox>

            <!-- Battery Voltage Chart -->
            <GroupBox Grid.Column="3" Header="Pil Gerilimi Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding BatteryVoltageSeries}" Background="Black"/>
            </GroupBox>

            <!-- Axis Data Chart -->
            <GroupBox Grid.Column="4" Header="Eksen Verileri Grafiği" Foreground="White" Margin="2">
                <lvc:CartesianChart Series="{Binding AxisDataSeries}" Background="Black"/>
            </GroupBox>
        </Grid>

        <!-- Telemetry Data Grid -->
        <GroupBox Grid.Row="3" Header="Telemetri Veri Tablosu" Foreground="White" Margin="5">
            <DataGrid x:Name="TelemetryDataGrid" 
                     ItemsSource="{Binding TelemetryDataCollection}"
                     AutoGenerateColumns="False" 
                     Background="Black" 
                     Foreground="White"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     CanUserAddRows="False"
                     IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Paket #" Binding="{Binding PacketNumber}" Width="60"/>
                    <DataGridTextColumn Header="Zaman" Binding="{Binding Timestamp, StringFormat='HH:mm:ss'}" Width="80"/>
                    <DataGridTextColumn Header="Sıcaklık (°C)" Binding="{Binding Temperature, StringFormat='F2'}" Width="100"/>
                    <DataGridTextColumn Header="Basınç (Pa)" Binding="{Binding Pressure, StringFormat='F0'}" Width="100"/>
                    <DataGridTextColumn Header="Yükseklik (m)" Binding="{Binding Altitude, StringFormat='F1'}" Width="100"/>
                    <DataGridTextColumn Header="Hız (m/s)" Binding="{Binding Speed, StringFormat='F1'}" Width="80"/>
                    <DataGridTextColumn Header="Pil (V)" Binding="{Binding BatteryVoltage, StringFormat='F2'}" Width="70"/>
                    <DataGridTextColumn Header="GPS Lat" Binding="{Binding GpsLatitude, StringFormat='F6'}" Width="100"/>
                    <DataGridTextColumn Header="GPS Lon" Binding="{Binding GpsLongitude, StringFormat='F6'}" Width="100"/>
                    <DataGridTextColumn Header="Gyro X" Binding="{Binding GyroX, StringFormat='F1'}" Width="70"/>
                    <DataGridTextColumn Header="Gyro Y" Binding="{Binding GyroY, StringFormat='F1'}" Width="70"/>
                    <DataGridTextColumn Header="Gyro Z" Binding="{Binding GyroZ, StringFormat='F1'}" Width="70"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Window>